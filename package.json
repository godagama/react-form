{
  "name": "@nib-components/react-form",
  "version": "0.1.3",
  "main": "./dist/index.js",
  "dependencies": {
    "classnames": "^2.2.0",
    "@nib-styles/react-form": "^0.0.3"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babelify": "^6.4.0",
    "browserify": "^12.0.0",
    "invariant": "^2.1.2",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "sass-composer": "^2.0.0-beta12",
    "watchify": "^3.5.0",
    "@nib-styles/v2-buttons": "^2.1.1"
  },
  "scripts": {
    "lint": "eslint -c jameslnewell/react lib/**/*.jsx",
    "build": "babel ./index.js ./lib/*.jsx ./lib/**/*.jsx -d ./dist --source-maps",
    "watch": "babel ./index.js ./lib/*.jsx ./lib/**/*.jsx -d ./dist --watch --source-maps",
    "example.js.build": "browserify -v --debug -t babelify example/index.js -o example/index.bundled.js",
    "example.js.watch": "watchify -v --debug -t babelify example/index.js -o example/index.bundled.js",
    "example.css.build": "sass-composer index.scss -o example/index.bundled.css",
    "example.css.watch": "sass-composer --watch index.scss -o example/index.bundled.css",
	  "example.build": "npm run build && npm run example.js.build && npm run example.css.build",
	  "deploy": "npm run example.build && firebase deploy",
    "prepublish": "npm run build"
  }
}
